@{
    ViewData["Title"] = "Clock Page";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
</head>

<body>
    <div id="clock">


        <p> {{ clock }} </p>

    </div>


    <script>
        

        var table_app = new Vue({
            el: '#clock',
            data:
            {
                clock: new Date(),

            },
            
            mounted: function () {
                var self = this;
                console.log("clock");

                this.timer = setInterval(function () {
                    //设置定时器，每秒执行一次function函数，
                    //函数是获取当前时间并给date变量赋值(每秒赋值一次)
                    self.clock = new Date();  //修改数据date
                }, 1000);

            }
        });

    </script>
</body>
</html>